pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                bat script: '''
                    echo "\n----------------------------------- Build Step Started -----------------------------------\n"
                    gradlew build
					echo "\n----------------------------------- Build Step Completed -----------------------------------"
                ''',
            label: "Building Project"
            }
        }
        stage('Test')
        {
            steps {
                bat script: '''
                    echo "\n----------------------------------- Tests Step Started -----------------------------------\n"
                    gradlew test
					echo "\n----------------------------------- Tests Step Completed -----------------------------------"
                ''',
            label: "Running Unit Test Cases"
            }
        }
        stage('Static Code Analysis')
        {
            steps {
                bat script: '''
                    echo "\n----------------------------------- Sonarcube Step Started -----------------------------------\n"
					#TODO Sonarcube Scan
					echo "\n----------------------------------- Sonarcube Step Completed -----------------------------------"
                ''',
            label: "Running Sonarqube Scan"
            }
        }
        stage('Build DockerImage')
        {
            steps {
                bat script: '''
                    echo "\n----------------------------------- Build DockerImage Step Started -----------------------------------\n"
					docker build -t "mars-rover-container" -f .infra/docker/Dockerfile .
					docker run mars-rover-container
					echo "\n----------------------------------- Build DockerImage Step Completed -----------------------------------"
                ''',
            label: "Building Docker Image"
            }
        }
        stage('Publish DockerImage')
        {
            steps {
                bat script: '''
                    echo "\n----------------------------------- Publishing DockerImage Step Started -----------------------------------\n"
					docker tag mars-rover-container bsvishal123/mars_rover_container:first
					docker push bsvishal123/mars_rover_container:first
					echo "\n----------------------------------- Publishing DockerImage Step Completed -----------------------------------"
                ''',
            label: "Publishing Docker Image"
            }
        }
    }
}